<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="alert alert-warning hide loading-caption">
      <strong><%= t('label.loading') %></strong>
    </div>

    <div class="container">
      <%= render 'shared/menu' %>
      <%= render 'shared/flash' if flash_message %>

      <%= yield %>
    </div>
  </body>
</html>
